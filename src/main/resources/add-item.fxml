<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="800.0" prefWidth="840.0" stylesheets="@styles/add-item.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Main.AddItem">
   <VBox prefHeight="200.0" prefWidth="100.0">
      <children>
          <VBox fx:id="addItem_VBoxContent" alignment="CENTER" prefHeight="775.0" prefWidth="840.0" spacing="20.0">
              <Label fx:id="addItem_titleLabel" contentDisplay="RIGHT" prefHeight="44.0" prefWidth="753.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="%addItem.title">
                  <VBox.margin>
                      <Insets top="20.0" />
                  </VBox.margin>
              </Label>
              <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="20.0" prefWidth="715.0">
                  <Label fx:id="addItem_customerID" prefHeight="17.0" prefWidth="710.0" text="%addItem.customerID" />
                  <Label fx:id="addItem_customerName" prefHeight="17.0" prefWidth="710.0" text="%addItem.customerName" />
                  <Label fx:id="addItem_customerAddress" prefHeight="17.0" prefWidth="710.0" text="%addItem.customerAddress" />
              </VBox>
              <HBox prefHeight="363.0" prefWidth="665.0">
                  <VBox alignment="CENTER" prefHeight="75.0" prefWidth="664.0" spacing="10.0">
                      <Label fx:id="addItem_nameLabel" prefHeight="33.0" prefWidth="300.0" text="%addItem.name" />
                      <TextField fx:id="addItem_itemNameField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="300.0" styleClass="field-box" />
                      <Label fx:id="addItem_statusLabel" prefHeight="33.0" prefWidth="300.0" text="%addItem.status" />
                      <ChoiceBox fx:id="addItem_statusChoice" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="300.0" styleClass="custom-choicebox" />
                      <Label fx:id="addItem_categoryLabel" prefHeight="33.0" prefWidth="300.0" text="%addItem.category" />
                      <ChoiceBox fx:id="addItem_categoryChoice" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="300.0" styleClass="custom-choicebox" />
                      <Label fx:id="addItem_pawnLabel" prefHeight="33.0" prefWidth="300.0" text="%addItem.pawnedDate" />
                      <DatePicker fx:id="addItem_pawnDatePicker" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="300.0" styleClass="custom-choicebox" />
                      <Label fx:id="addItem_expireLabel" prefHeight="33.0" prefWidth="300.0" text="%addItem.expireDate" />
                      <DatePicker fx:id="addItem_expireDatePicker" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="300.0" styleClass="custom-choicebox" />
                  <HBox.margin>
                     <Insets />
                  </HBox.margin>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="75.0" prefWidth="664.0" spacing="10.0">
                      <Label fx:id="addItem_priceLabel" prefHeight="33.0" prefWidth="300.0" text="%addItem.price" />
                      <TextField fx:id="addItem_priceField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="300.0" styleClass="field-box" />
                      <Label fx:id="addItem_tariffLabel" prefHeight="33.0" prefWidth="300.0" text="%addItem.tariff" />
                      <TextField fx:id="addItem_tariffField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="300.0" styleClass="field-box" />
                      <Label fx:id="addItem_adminLabel" prefHeight="33.0" prefWidth="300.0" text="%addItem.admin" />
                      <TextField fx:id="addItem_adminField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="300.0" styleClass="field-box" />
                      <Label fx:id="addItem_provisionLabel" prefHeight="33.0" prefWidth="300.0" text="%addItem.provision" />
                      <TextField fx:id="addItem_provisionField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="300.0" styleClass="field-box" />
                      <Label fx:id="addItem_storageLabel" prefHeight="33.0" prefWidth="300.0" text="%addItem.storage" />
                      <TextField fx:id="addItem_storageField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="300.0" styleClass="field-box" />
                      <Label fx:id="addItem_damageLabel" prefHeight="33.0" prefWidth="300.0" text="%addItem.damage" />
                      <TextField fx:id="addItem_damageField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="300.0" styleClass="field-box" />
                  </VBox>
               <VBox.margin>
                  <Insets top="-10.0" />
               </VBox.margin>
              </HBox>
              <VBox alignment="CENTER" prefHeight="83.0" prefWidth="838.0" spacing="10.0">
              <children>
                  <Label fx:id="addItem_totalLabel" prefHeight="17.0" prefWidth="625.0" text="%addItem.total" />
                  <TextField fx:id="addItem_totalField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="629.0" styleClass="field-box" />
              </children>
              </VBox>
              <HBox prefHeight="190.0" prefWidth="838.0">
                  <VBox alignment="CENTER" prefHeight="211.0" prefWidth="838.0" spacing="10.0">
                      <Label fx:id="addItem_notesLabel" prefHeight="26.0" prefWidth="627.0" text="%addItem.notes" />
                      <TextArea fx:id="addItem_notesField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="183.0" prefWidth="629.0" styleClass="field-box" />
                  </VBox>
              </HBox>
          </VBox>
           <HBox alignment="CENTER" prefHeight="70.0" prefWidth="664.0" spacing="10.0">
               <Button fx:id="addItem_confirmAddButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="157.0" styleClass="confirm-button" text="%addItem.confirm" />
               <Button fx:id="addItem_cancelAddButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="157.0" styleClass="cancel-button" text="%addItem.cancel" />
           </HBox>
      </children>
   </VBox>
</StackPane>
